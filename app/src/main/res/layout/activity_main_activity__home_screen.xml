<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="healthyhouseesl.com.wellbeingapp.MainActivity_HomeScreen">
    //The following below are located in the AndroidManifest.xml which can be accessed through the
    Project Tab (instead of Android Tab)
    //the "android:label" is responsible for the name of the app that is seen in the home screen as
    well as the top of the app for every page
    //the "android:icon" uis responsible for what image shows up for the app in the home screen, it
    is placed in the mipmap folders and called upon

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

            <ImageButton
                android:id="@+id/BackgroundInfoButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:src="@drawable/background_info"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:id="@+id/DocotorFAQButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:src="@drawable/doctor_icon"
                android:scaleType="fitCenter"
                android:layout_below="@+id/BackgroundInfoButton"
                android:layout_alignLeft="@+id/BackgroundInfoButton"
                android:layout_alignStart="@+id/BackgroundInfoButton" />

            <ImageButton
                android:id="@+id/DoAndDontButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:src="@drawable/check_mark"
                android:scaleType="fitCenter"
                android:layout_above="@+id/AntiBioInfoButton"
                android:layout_alignLeft="@+id/DocotorFAQButton"
                android:layout_alignStart="@+id/DocotorFAQButton" />

            <ImageButton
                android:id="@+id/AntiBioInfoButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:src="@drawable/pill_icon_ayy"
                android:scaleType="fitCenter"
                android:layout_above="@+id/IllnessesInfoButton"
                android:layout_alignLeft="@+id/DoAndDontButton"
                android:layout_alignStart="@+id/DoAndDontButton" />

            <ImageButton
                android:id="@+id/IllnessesInfoButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:src="@drawable/thermometer"
                android:scaleType="fitCenter"
                android:layout_above="@+id/LocationButton"
                android:layout_alignLeft="@+id/AntiBioInfoButton"
                android:layout_alignStart="@+id/AntiBioInfoButton"/>

            <ImageButton
                android:id="@+id/LocationButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:src="@drawable/map_icon"
                android:scaleType="fitCenter"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/IllnessesInfoButton"
                android:layout_alignStart="@+id/IllnessesInfoButton" />

            <ImageButton
                android:id="@+id/SourcesInfoButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:src="@drawable/resources"
                android:scaleType="fitCenter"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/LocationButton"
                android:layout_alignStart="@+id/LocationButton"
                android:layout_marginBottom="27dp" />

        </TableLayout>
    </ScrollView>
</RelativeLayout>